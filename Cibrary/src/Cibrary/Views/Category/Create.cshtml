@model Category

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}


<div class="container">
    <h2>Legg til ny kategori</h2>
    <div>
        <form asp-controller="Category" asp-action="Create" method="post">
            <div asp-validation-summary="ValidationSummary.ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CategoryName">Tittel</label>
                <input asp-for="CategoryName" class="form-control" placeholder="Kategorinavn" />
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>

            <input type="submit" class="btn btn-default" value="Legg til" />
        </form>
    </div>
</div>

